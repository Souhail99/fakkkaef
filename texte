$(document).ready(function() {
  $('.question').click(function() {
    $(this).next('.answer').slideToggle();
  });
});

<head>
  <script src="/faq.js"></script>
</head>

const faqData = [
  {
    question: "Qu'est-ce que Next.js ?",
    answer: "Next.js est un framework pour React qui facilite la création d'applications web performantes et évolutives."
  },
  {
    question: "Comment puis-je ajouter jQuery à mon application Next.js ?",
    answer: "Vous pouvez ajouter jQuery en utilisant npm ou en ajoutant la bibliothèque directement dans votre fichier HTML."
  },
  // ...
];

function FAQ() {
  return (
    <div>
      <h1>FAQ</h1>
      {faqData.map((item, index) => (
        <div key={index}>
          <h2 className="question">{item.question}</h2>
          <p className="answer">{item.answer}</p>
        </div>
      ))}
    </div>
  );
}
