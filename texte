import React, { useState } from "react";

export default function FaqPage() {
  const [faqs, setFaqs] = useState([
    {
      question: "Qu'est-ce que Next.js ?",
      answer: "Next.js est un framework JavaScript pour le développement web côté serveur et côté client.",
      showAnswer: false
    },
    {
      question: "Qu'est-ce que React ?",
      answer: "React est une bibliothèque JavaScript pour la construction d'interfaces utilisateur.",
      showAnswer: false
    },
    {
      question: "Qu'est-ce que useState ?",
      answer: "useState est un hook qui permet de gérer l'état d'un composant React.",
      showAnswer: false
    },
    {
      question: "Comment utiliser useState ?",
      answer: "Pour utiliser useState, il faut d'abord l'importer depuis la bibliothèque React, puis appeler le hook dans le corps du composant.",
      showAnswer: false
    }
  ]);

  const [searchTerm, setSearchTerm] = useState("");

  const handleSearch = (event) => {
    setSearchTerm(event.target.value);
  };

  const handleToggleAnswer = (index) => {
    const newFaqs = [...faqs];
    newFaqs[index].showAnswer = !newFaqs[index].showAnswer;
    setFaqs(newFaqs);
  };

  const filteredFaqs = faqs.filter((faq) =>
    faq.question.toLowerCase().includes(searchTerm.toLowerCase())
  );

  return (
    <div>
      <h1>FAQs</h1>
      <input type="text" onChange={handleSearch} />
      {filteredFaqs.map((faq, index) => (
        <div key={index}>
          <h3>{faq.question}</h3>
          <button onClick={() => handleToggleAnswer(index)}>
            {faq.showAnswer ? "Masquer la réponse" : "Afficher la réponse"}
          </button>
          {faq.showAnswer && <p>{faq.answer}</p>}
        </div>
      ))}
    </div>
  );
}
